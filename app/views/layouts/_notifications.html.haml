.toast-container.position-absolute.top-0.end-0.p-3
  .toast.align-items-center.text-white.border-0{ class: ( notice ? "bg-success" : "bg-danger" ), role: "alert", "aria-live": "assertive", "aria-atomic": "true" }
    .d-flex
      .toast-body
        = notice || alert
      %button.btn-close.btn-close-white.me-2.m-auto{ "aria-label": "Close", "data-bs-dismiss": "toast", type: "button" }